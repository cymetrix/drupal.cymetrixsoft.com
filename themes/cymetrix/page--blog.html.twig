    <div id="blog-banner" class="animated-paragraph">
        <div class="container">
            <div class="banner-title">
                <h2>Discover our<br>
                    <span style="color:#1B7EC1">Blogs, News and</span><br>
                    <span style="color:#1B7EC1">Podcast</span>
                </h2>
                <a class="cymetrix_button_icon custom_button" href="#">Contact Expert</a>
            </div>
            
            <div class="right_info">
                <img src="https://drupal.cymetrixsoft.com/sites/default/files/2024-02/2ba7b7e02074bbfda63797de4c95e3a8.png">
            </div>
        </div>
    </div>
    
    
    
    
    <br><br>
              <main class="container animated-paragraph">
                  
                  <h2 class="section_heading text-center">Discover</h2>
                  <br>
                  <div class="row">
            <div class="col-md-8">
                <div class="latest-articles">
                    <h2 class="blog_section_heading">Latest</h2>
                    <hr>
                    <div class="row">
                          {% if articles %}
                                {% for article in articles %}
                                        <article class="col-sm-6 blog-post">
                                            {% if article.field_image %}
                                                <img src="{{ file_url(article.field_image.entity.fileuri) }}" alt="{{ article.field_image.alt }}">
                                            {% endif %}
                                            {% if article.field_category %}
                                                <p>Category: {{ article.field_category.entity.label }}</p>
                                            {% endif %}
                                            
                                            <h3 class="blog-heading"><a href="{{ path('entity.node.canonical', {'node': article.id}) }}">{{ article.title.value }}</a></h3>
                                            <br/>
                                            <div class="blogNav">
                                                <a class="cymetrix_button_icon" href="{{ path('entity.node.canonical', {'node': article.id}) }}">
                                                    <span>Read More</span>
                                                </a>    
                                            </div>
                                            
                                        </article>
                                    {% endfor %}

                            {% else %}
                                <p>No articles found.</p>
                            {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="featured">
                    <h2 class="blog_section_heading">Featured</h2>
                    <hr>
                    
                    
                    {% for featured_article in featured_articles %}
                        <div class="featured-blog-post">
                            <div class="featured-blog-img">
                                {% set file_uri = featured_article.field_image.entity.fileuri %}
                                {% set file_url = file_url(file_uri) %}
                                <img src="{{ file_url }}">
                            </div>
                            <div class="featured-blog-title">
                                <h4><a href="{{ url('entity.node.canonical', {'node': featured_article.id}) }}">{{ featured_article.title.value }}</a></h4>
                                <p>{{ featured_article.field_short_description.value }}</p>
                            </div>
                        </div>
                    {% endfor %}


                </div>
            </div>
        </div>
    </main>
        </div>
    </div>
    
    

